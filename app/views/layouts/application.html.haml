!!!
%html
  %head
    %title Ideas
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    %script{src: "http://js.pusher.com/2.0/pusher.min.js"}
    :javascript
      var pusher = new Pusher("#{Pusher.key}");
    = csrf_meta_tags
  %body{ng: {controller: 'GlobalCtrl', init: "showNewIdea=#{@show_new_idea}; statuses=#{@statuses.to_json}"}}
    .navbar.navbar-default.navbar-static-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"}
            .logo
        .navbar-collapse.collapse
          %ul.nav.navbar-nav
            %li
              %a.link{ng: {click: 'toggleNewIdea()'}} + New Idea
          %ul.nav.navbar-nav.navbar-right
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                -if admin_signed_in?
                  #{current_admin.name}
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to "Logout yo", destroy_admin_session_path, :method => :delete
                %li.divider
                %li.dropdown-header Secret Actions
                %li
                  %a{:href => "#"} Option 1
                %li
                  %a{:href => "#"} Option 2
        / /.nav-collapse
    .container
      .row
        = yield

  :javascript
    getAdmin(#{current_admin.to_json(only: [:name, :id, :image_url])});