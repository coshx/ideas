.ideas-list{ng: {controller: 'IdeasListCtrl', init: "ideas=#{jsonize(@ideas)}"}}
  .idea{ng: {repeat: 'idea in ideas'}}
    %span.upvotes
      {{idea.upvotes}}
      %span.vote{ng: {click: 'vote(idea)'}, class:'voted-{{idea.voted}}'}
        %span.glyphicon.glyphicon-arrow-up{ng:{show: '!idea.voted'}}
        %span.glyphicon.glyphicon-arrow-down{ng:{show: 'idea.voted'}}
    %span.title
      {{idea.title}}
    %span.admin
      by
      {{idea.admin.name}}
      %img{src: "{{idea.admin.imageUrl && idea.admin.imageUrl || idea.admin.image_url}}"}

  .new-idea
    %input{type: 'text', ng: {model: 'newIdea.title'}, placeholder: "Idea title"}
    %textarea{ ng: {model: 'newIdea.description'}, placeholder: "Idea description"}
    .btn.btn-primary{ng: {click: 'createIdea(newIdea)'}} Add idea